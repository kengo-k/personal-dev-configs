// ユーザ用VSCode設定ファイル
//
// Windows: $HOME/AppData/Roaming/Code/User/settings.json
// Mac: $HOME/Library/Application Support/Code/User

// インストールしたプラグイン
// [一般]
// - Material Icon Theme: エクスプローラーのアイコンの見栄えを良くする
// - Remote - Containers: コンテナ内で直接ファイル編集等の作業をする際に使用する
// - Prettier - Code formatter: フォーマッター
//    ※prettier本体は別途でnodeによるグローバルインストール推奨
//    npm install -g prettier
//    npm install -g prettier-plugin-sh
//
// - Run on Save: 保存時に任意のコマンドを実行する
//
// [プログラミング言語別]
//
// - ES7+ React/Redux/React-Native snippets: Reactのコードスニペットサポート
// - Import Cost: jsでimport文の横にサイズを表示してくれる
// - Black Formatter: Python用のフォーマッター(prettierがpython対応していない)

{
  "workbench.colorTheme": "Default Light+",

  "git.ignoreMissingGitWarning": true,

  "files.trimTrailingWhitespace": true,

  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.renderWhitespace": "all",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": false,

  "prettier.enable": true,
  "prettier.enableDebugLogs": true,

  "[html]": {
    "editor.formatOnSave": true
  },

  "[javascript]": {
    "editor.formatOnSave": true
  },

  "[javascriptreact]": {
    "editor.formatOnSave": true
  },

  "[typescript]": {
    "editor.formatOnSave": true
  },

  "[typescriptreact]": {
    "editor.formatOnSave": true
  },

  "[json]": {
    "editor.formatOnSave": true
  },

  "[jsonc]": {
    "editor.formatOnSave": true
  },

  "[python]": {
    "editor.formatOnSave": true,
    // python用formatter "black"プラグイン ※ python用のprettierは存在しない
    "editor.defaultFormatter": "ms-python.black-formatter"
  },

  // runonsaveプラグイン
  "emeraldwalk.runonsave": {
    "commands": [
      {
        "match": "\\.sh$",
        "cmd": "prettier --write ${file}"
      },
      {
        "match": "\\.go$",
        "cmd": "go fmt ${file}"
      }
    ]
  },

  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell"
    },
    "Command Prompt": {
      "path": [
        "${env:windir}\\Sysnative\\cmd.exe",
        "${env:windir}\\System32\\cmd.exe"
      ],
      "args": [],
      "icon": "terminal-cmd"
    },
    "Git Bash": {
      "source": "Git Bash"
    },
    "Ubuntu (WSL)": {
      "path": "C:\\WINDOWS\\System32\\wsl.exe",
      "args": ["-d", "Ubuntu"]
    }
  },
  "terminal.integrated.defaultProfile.windows": "Ubuntu (WSL)"
}
